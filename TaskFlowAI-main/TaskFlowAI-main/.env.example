# Telegram Bot Configuration
BOT_TOKEN=your_bot_token_here
ADMIN_USER_IDS=123456789,987654321

# Database Configuration
# For SQLite (recommended for development)
DATABASE_URL=sqlite+aiosqlite:///./langsense.db

# For PostgreSQL (recommended for production)
# DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/langsense

# Broadcast Configuration
BROADCAST_RATE_LIMIT=30
BROADCAST_CHUNK_SIZE=100
BROADCAST_RETRY_ATTEMPTS=3
BROADCAST_RETRY_DELAY=5

# Localization Configuration
DEFAULT_LANGUAGE=ar
DEFAULT_COUNTRY=SA

# Customer ID Configuration
CUSTOMER_ID_PREFIX=C
CUSTOMER_ID_YEAR_FORMAT=2025

# File Upload Configuration
MAX_FILE_SIZE=20
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Pagination Configuration
USERS_PER_PAGE=10
ANNOUNCEMENTS_PER_PAGE=5

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=bot.log

# Rate Limiting Configuration
USER_RATE_LIMIT=5
ADMIN_RATE_LIMIT=30

# Optional: Advanced Database Settings
# For production environments, you may want to configure these
# DB_POOL_SIZE=20
# DB_MAX_OVERFLOW=30
# DB_POOL_TIMEOUT=30
# DB_POOL_RECYCLE=3600

# Optional: Redis Configuration (for advanced features)
# REDIS_URL=redis://localhost:6379/0
# REDIS_PASSWORD=your_redis_password

# Optional: External Services
# WEBHOOK_URL=https://your-domain.com/webhook
# WEBHOOK_SECRET=your_webhook_secret

# Optional: Feature Flags
# ENABLE_WEBHOOKS=false
# ENABLE_PAYMENTS=false
# ENABLE_FILE_UPLOADS=true
# MAINTENANCE_MODE=false
