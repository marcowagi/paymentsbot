# Telegram Bot Configuration
BOT_TOKEN=your_bot_token_here

# Admin Configuration (comma-separated list of admin user IDs)
ADMINS=123456789,987654321

# Support Configuration (comma-separated list of support channel IDs or usernames)
SUPPORT_CHANNELS=@your_support_channel

# Database Configuration
# For SQLite (default, recommended for development)
DATABASE_URL=sqlite+aiosqlite:///data/db.sqlite3

# For PostgreSQL (recommended for production)
# DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/finance_bot

# Localization Configuration
DEFAULT_LANGUAGE=ar

# Customer ID Configuration
CUSTOMER_ID_PREFIX=C
CUSTOMER_ID_YEAR_FORMAT=2025

# Broadcast Configuration
BROADCAST_RATE_LIMIT=30
BROADCAST_CHUNK_SIZE=100
BROADCAST_RETRY_ATTEMPTS=3
BROADCAST_RETRY_DELAY=5

# Logging Configuration
LOG_LEVEL=INFO