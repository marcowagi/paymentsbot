# Telegram Bot Configuration
BOT_TOKEN=your_bot_token_here

# Admin Configuration (comma-separated list of super admin user IDs)
ADMINS=123456789,987654321

# Run Mode Configuration
RUN_MODE=polling
# For webhook mode, uncomment and configure:
# RUN_MODE=webhook
# WEBHOOK_URL=https://your-domain.com/webhook
# WEBHOOK_SECRET_TOKEN=your_webhook_secret
# WEBHOOK_PORT=8000

# Database Configuration
# For SQLite (default, recommended for development)
DATABASE_URL=sqlite+aiosqlite:///data/db.sqlite3

# For PostgreSQL (recommended for production)
# DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/finance_bot

# Localization Configuration
DEFAULT_LANGUAGE=ar
SUPPORTED_LANGUAGES=ar,en

# Currency Configuration
DEFAULT_CURRENCY=SAR

# Customer ID Configuration
CUSTOMER_ID_PREFIX=C
CUSTOMER_ID_YEAR_FORMAT=2025

# Broadcast Configuration
BROADCAST_RATE_LIMIT=28
BROADCAST_CHUNK_SIZE=100
BROADCAST_RETRY_ATTEMPTS=3
BROADCAST_RETRY_DELAY=5

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf

# Logging Configuration
LOG_LEVEL=INFO

# Legacy Support Configuration (will be moved to database)
SUPPORT_CHANNELS=@your_support_channel